{% extends '../layout.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 text-center p-5 mt-5" style="background-color: #F4F4F4;">
            <h4>Create new forum/category</h4>
            {% if errors %}
            <div class="alert alert-danger" role="alert">
                <br>
                <ul>
                {% for error in errors %}
                <li>{{error}}</li>
                {% endfor %}
                </ul>
            </div>
            {% endif %}
            <hr>
            <form method="POST" action="create">
                <div class="form-group">
                    <label for="name">Forum/Category name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <label for="description">Forum/Category description</label>
                    <input type="textarea" class="form-control" id="description" name="description" placeholder="Description" required>
                </div>
                <div class="form-group">
                    <label for="type">Select type</label>
                    <select class="form-control" id="type" name="type" required>
                        <option value=1 selected>Forum</option>
                        <option value=0>Category</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="category">Select category</label>
                    <select class="form-control" id="category" name="category" required>
                        {% if categories %}
                            <option value=0>Select category</option>
                            {% for category in categories %}
                            <option value={{ category.id }}>{{ category.name }}</option>
                            {% endfor %}
                        {% else %}
                        <option value=0>There's no categories availables</option>
                        {% endif %}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
{% endblock %}
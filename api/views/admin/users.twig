{% extends './layout.twig' %}

{% block body %}
<div class="container mt-5">
    <table class="table table-hover">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Created at</th>
        <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
        <th scope="row">{{ user.id }}</th>
        <td>{{ user.username }}</td>
        <td>{{ user.email }}</td>
        <td>{{ user.createdAt }}</td>
        <td> X X X X </td>
        </tr>
        {% endfor %}
    </tbody>
    </table>
</div>
{% endblock %}
{% extends 'layout.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 text-center p-5 mt-5" style="background-color: #F4F4F4;">
            <h4>Sign up</h4>
            {% if errors %}
            <div class="alert alert-danger" role="alert">
                <br>
                <ul>
                {% for error in errors %}
                <li>{{error}}</li>
                {% endfor %}
                </ul>
            </div>
            {% endif %}
            <hr>
            <form method="POST" action="./verify">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" minlength=6 required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email" minlength=8 required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" minlength=6 required>
                </div>
                <div class="form-group">
                    <label for="repassword">Re-password</label>
                    <input type="password" class="form-control" id="repassword" name="repassword" placeholder="Retype Password" minlength=6 required>
                </div>
                <div class="form-group">
                    <label for="gender">Select your gender</label>
                    <select class="form-control" id="gender" name="gender" required>
                        <option value=0>Select your gender</option>
                        {% for gender in genders %}
                        <option value = {{gender.id}}>{{gender.name}}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="country">Select your country</label>
                    <select class="form-control" id="country" name="country" required>
                        <option value=0>Select your country</option>
                        {% for country in countries %}
                        <option value = {{country.id}}>{{country.name}}</option>
                        {% endfor %}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
{% endblock %}